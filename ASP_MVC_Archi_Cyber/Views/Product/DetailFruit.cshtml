@model Fruit
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{

    ViewData["Title"] = "Détail " + Model.Name;
    decimal discount = (decimal)ViewData["Argent"];
    decimal reduction = ViewBag.Reduction;
}


<h1>@Model.Name</h1>

<ul>
    <li>Prix : @Model.Price - @(Model.IsBio ? $"Prix discount à ({ViewBag.Reduction} %) : {Model.Price - (Model.Price * (discount) / 100)}" : "Non")</li>
    <li>Origine : @Model.Origin</li>
    <li>
        Bio : 
        @(Model.IsBio ? "Oui" : "Non")

    </li>
</ul>
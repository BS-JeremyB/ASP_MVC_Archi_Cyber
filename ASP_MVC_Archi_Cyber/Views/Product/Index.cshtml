@{

    ViewData["Title"] = "Fruits";
    // string argent = TempData["Argent"].ToString();

}
@* <h2>Argent : @argent</h2> *@

<h1>Fruits :</h1>

<table>
    <thead>
        <tr>
            <th>
                Fruits
            </th>
            <th>
                Prix
            </th>
            <th>
                Détail
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach(Fruit fruit in Model)
        {
            <tr>
                <td>
                    @fruit.Name
                </td>
                <td>
                    @fruit.Price
                </td>
                <td>
                    <a class="btn btn-primary" asp-controller="Product" asp-action="DetailFruit" asp-route-id="@fruit.Id">Voir</a>
                </td>

            </tr>
        }
    </tbody>
</table>